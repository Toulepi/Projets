{% extends 'base.html.twig' %}

{% block title %} Rubrique Library {% endblock %}

{% block body %}
    <header>
        <!--barre de navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav  mt-2 mt-lg-0">
                    <a class="nav-link nav-item" href="#"><img src="https://img.icons8.com/nolan/64/e-learning-2.png"
                                                               alt="online book"/>E-Librairie</a>
                </div>
                <div id="search" class="mr-auto">
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Rechercher un livre, un thème" aria-label="Search">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>
                <div class="navbar-nav form-inline my-2 my-lg-0">
                    <a class="nav-item nav-link" href="connexion"><img
                                src="https://img.icons8.com/nolan/25/user-folder.png"/>Compte connexion</a>
                    <a class="nav-link nav-item" href="panier"><img
                                src="https://img.icons8.com/nolan/25/add-to-basket.png"/>Panier</a>
                </div>
            </div>
        </nav>
        <!--fin de la barre nav-->
    </header>

    <body>
    <div class="row">

        <!-- il faut récupérer la rubrique (id) puis afficher tous les themes qu'elle contient -->

        {% if( GET[{id}] == rubrique.id) %}

            <div class="col dropdown ">
                <div class="dropdown">
                    <button class="dropdown-item" href="#">{{ rub.classement }} </button>
                    <div class="dropdown-content">
                        {% for thme in rub.theme |sort %}  <!-- Pour chaque catégorie on affiche toutes ses rubriques -->
                            <a href="#">{{ thme.description }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>

        {% endif %}

    </div>

    <hr>

    </body>
    <hr>

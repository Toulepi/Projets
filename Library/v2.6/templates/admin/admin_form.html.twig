    <main id="admin-connect">
        <h5>Bonjour identifiez-vous</h5>
        <form >
            <div class="form-group">
                <label for="email"></label>
                <input type="email" class="form-control" placeholder="Votre identifiant" id="email">
            </div>
            <div class="form-group">
                <label for="mdp"></label>
                <input type="password" class="form-control" placeholder="Mot de passe" id="mdp">
            </div>
            <button type="submit" class="btn btn-success" href="#">connexion</button>
            <button type="reset" class="btn btn-danger" href="#">supprimer</button>
        </form>
    </main>

    <footer id="footerpad" class="container fixed-bottom">
        <p class="copyright text-center">Copyright &copy; 2020 Librairie</p>
    </footer>
